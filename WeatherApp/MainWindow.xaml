<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="SearchBar" HorizontalAlignment="Center" Height="24" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="570" Text="Search"/>
        <Grid HorizontalAlignment="Left" Height="164" Margin="41,53,0,0" VerticalAlignment="Top" Width="172">
            <Image x:Name="MorningImage" Margin="5,5,0,0" HorizontalAlignment="Left" Width="72" Height="68" VerticalAlignment="Top"/>
            <Image x:Name="AfternoonImage" Margin="0,5,5,0" HorizontalAlignment="Right" Width="72" Height="68" VerticalAlignment="Top"/>
            <TextBlock x:Name="MorningInfo" Margin="4,0,0,0" TextWrapping="Wrap" Text="TextBlock" HorizontalAlignment="Left" Width="82" Height="82" VerticalAlignment="Bottom"/>
            <TextBlock x:Name="AfternoonInfo" Margin="0,0,4,0" TextWrapping="Wrap" Text="TextBlock" Height="82" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="82"/>
        </Grid>
        <TextBlock x:Name="ForecastSummary" HorizontalAlignment="Left" Height="148" Margin="280,53,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="460"/>
        <Grid HorizontalAlignment="Center" Height="94" Margin="0,231,0,0" VerticalAlignment="Top" Width="780">
            <Grid x:Name="Hour1" HorizontalAlignment="Left" Height="94" VerticalAlignment="Center" Width="58">
                <TextBlock x:Name="H1Time" HorizontalAlignment="Center" Height="16" TextWrapping="Wrap" VerticalAlignment="Top" Width="58" TextAlignment="Center"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
