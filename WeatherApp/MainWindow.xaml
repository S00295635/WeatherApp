<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="LightSteelBlue" KeyDown="Window_KeyDown">
    <Window.Resources>
        <DataTemplate x:Key="HourlyTemplate">
            <Grid HorizontalAlignment="Left" Height="94" VerticalAlignment="Center" Width="58">
                <TextBlock Text="{Binding timeString}" HorizontalAlignment="Center" Height="16" TextWrapping="Wrap" VerticalAlignment="Top" Width="58" TextAlignment="Center"/>
                <TextBlock Text="{Binding temperatureString}" HorizontalAlignment="Center" Height="16" TextWrapping="Wrap" VerticalAlignment="Top" Width="58" TextAlignment="Center" Margin="0,49,0,0"/>
                <Image Source="{Binding image}" Height="33" Margin="0,16,0,0" VerticalAlignment="Top"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid ScrollViewer.CanContentScroll="True">
        <Grid HorizontalAlignment="Left" Height="164" Margin="41,53,0,0" VerticalAlignment="Top" Width="172">
            <Image x:Name="MorningImage" Margin="5,5,0,0" HorizontalAlignment="Left" Width="72" Height="68" VerticalAlignment="Top"/>
            <Image x:Name="AfternoonImage" Margin="0,5,5,0" HorizontalAlignment="Right" Width="72" Height="68" VerticalAlignment="Top"/>
            <TextBlock x:Name="MorningInfo" Margin="4,0,0,0" TextWrapping="Wrap" Text="TextBlock" HorizontalAlignment="Left" Width="82" Height="82" VerticalAlignment="Bottom"/>
            <TextBlock x:Name="AfternoonInfo" Margin="0,0,4,0" TextWrapping="Wrap" Text="TextBlock" Height="82" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="82"/>
        </Grid>
        <TextBlock x:Name="ForecastSummary" HorizontalAlignment="Left" Height="148" Margin="280,53,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="460"/>
        <ScrollViewer HorizontalAlignment="Center" Height="94" Margin="0,231,0,0" VerticalAlignment="Top" Width="780" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden" CanContentScroll="True" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <ItemsControl ItemsSource="{Binding AllHourlyWeathers}" ItemTemplate="{StaticResource HourlyTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        <!--- > Search bar <-->
        <StackPanel Margin="127,11,177,307">
        <Popup Width="{Binding PlacementTarget.ActualWidth, RelativeSource={RelativeSource Mode=Self}}"
          Placement="Bottom"
          PlacementTarget="{Binding ElementName=SearchBarTB}">
                <Popup.Style>
                    <Style TargetType="{x:Type Popup}">
                        <Setter Property="IsOpen"
                            Value="False" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsFocused, ElementName=SearchBarTB}"
                                Value="True">
                                <Setter Property="IsOpen"
                                    Value="True" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsFocused, ElementName=SearchBarTB}"
                                Value="False">
                                <Setter Property="IsOpen"
                                    Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Popup.Style>
                <ListBox SelectionChanged="ListBox_SelectionChanged">
                    <ListBoxItem Content="A" />
                    <ListBoxItem Content="B" />
                </ListBox>
            </Popup>
            <TextBox x:Name="SearchBarTB" />
        </StackPanel>
    </Grid>
</Window>
